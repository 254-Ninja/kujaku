<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.ona.kujaku.activities.MapActivity">

    <io.ona.kujaku.views.KujakuMapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:current_location_btn_visibility="true"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/map_activity_location_addition_btn"
        android:background="@drawable/done_btn_bg"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:layout_weight="1"
        android:text="@string/add"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mapActivity_infoWindow"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:foregroundGravity="center"/>

</RelativeLayout>
